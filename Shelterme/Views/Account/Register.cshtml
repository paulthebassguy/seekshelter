
    
        <div class="regiform">

            @model Shelterme.Models.RegisterViewModel
            @{
                ViewBag.Title = "";
            }

            <h2>@ViewBag.Title</h2>
        </div>
        <div class="row">
           
            <div class="col-xs-12 form_register">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

               

                    @Html.AntiForgeryToken()
                    <h2 style="color:#6d6e70;font-weight:bold;">REGISTER OUR</h2>
                    <h2 style="color:#00b39b;margin-top:-12px;text-align:left;font-weight:bold;padding-bottom:20px;">SHELTER</h2>
                    <hr />

                    <div class="row">
                        <div class="col-xs-12">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row mar-left-10">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email address" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", @placeholder = "Contact Name" })
                            </div>
                        </div>
                    </div>

                    <div class="row mar-left-10">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row mar-top-5">
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(m => m.ShelterProviderName, new { @class = "form-control", @placeholder = "Shelter Name" })
                                </div>
                            </div>
                            <div class="row mar-top-5">
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(m => m.City, new { @class = "form-control", @placeholder = "City" })
                                </div>
                            </div>
                            <div class="row mar-top-5">
                                <div class="col-xs-12">
                                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @placeholder = "Address" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-xs-4">
                                    Beds available
                                </div>
                                <div class="col-xs-8">
                                    @Html.TextBoxFor(m => m.MaxBedsAvailable, new { @class = "form-control", @style = "width: 50px"})
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 bold">
                                    Available for:
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4">
                                    @Html.CheckBoxFor(m => m.AllowMen) &nbsp;Men
                                </div>
                                <div class="col-xs-4">
                                    @Html.CheckBoxFor(m => m.AllowWomen) &nbsp;Women
                                </div>
                                <div class="col-xs-4">
                                    @Html.CheckBoxFor(m => m.AllowChildren) &nbsp;Children
                                </div>
                            </div>
                            <div class="row mar-top-5">
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(m => m.Suburb, new { @class = "form-control", @placeholder = "Suburb" })
                                </div>
                            </div>
                            <div class="row mar-top-5">
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(m => m.ContactPhone, new { @class = "form-control", @placeholder = "Contact Phone" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="form-group">
                        <div class="col-md-4">
                            <input type="submit" class="btn btn-default" value="REGISTER" />
                        </div>
                    </div>
                
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

        </div>
            
        </div>
    

<style>
    .form_register{
        padding:20px;
        border: solid 1px;
        border-color: grey;
        border-radius:0px;
    }
</style>