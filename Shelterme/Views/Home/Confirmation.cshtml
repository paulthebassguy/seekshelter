@model Shelterme.Models.RegisterDetailsViewModel

@{
    ViewBag.Title = "Confirmation";
}

    <center><h4><b class="from-confirm-text-header">Thanks. You are now helping to make the world a better place.</b></h4></center>



<div class="row ">
    <div class="col-md-3">

    </div>
    
    
       
    <div class="col-md-5 form_confirm">

        <div class="row ">
            <p class="comfirm-top-text"> You have registered the following accommodation:<br /></p>
            <b class="from-confirm-text">Maximum number of beds:</b> <b>@Html.DisplayFor(m => m.MaxBedsAvailable)</b>
        </div>
        <div class="row">
            <b class="from-confirm-text">Shelter for:</b> <b> @Html.DisplayFor(m => m.AvailablityDisplayString)</b>
        </div>
        <b class="row">
            <b class="from-confirm-text">@Html.LabelFor(m => m.ShelterProviderName)</b> <b>
                : @Html.DisplayFor(m => m.ShelterProviderName)
            </b>


            <div class="row">
                <b class="from-confirm-text"> @Html.LabelFor(m => m.City) </b> @Html.DisplayFor(m => m.City)
            </div>

            <div class="row">
                <b class="from-confirm-text">@Html.LabelFor(m => m.Suburb) </b> : @Html.DisplayFor(m => m.Suburb)
            </div>
            <div class="row">
                <b class="from-confirm-text">  @Html.LabelFor(m => m.Address) </b> : @Html.DisplayFor(m => m.Address)
            </div>
            <div class="row">
                <b class="from-confirm-text"> @Html.LabelFor(m => m.ContactDetails) </b> : @Html.DisplayFor(m => m.ContactDetails)
            </div>
            <br />
            @Html.ActionLink("Continue", "Index", "Home", null, new { @class = "btn btn-default" })


    </div>
    <div class="col-md-4"></div>


</div>
    

