@model Shelterme.Models.RegisterDetailsViewModel
<div class="row" style="text-align:center;">
@{
    ViewBag.Title = "";
}
    </div>
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="row">
    <h2 class="col-md-11" style="text-align:center;color:#00b39b;text-shadow: -2px 0px 2px rgba(10, 10, 10, 1);">Register - availablity</h2>
</div>
<div class="row" >
    <div class="col-md-3">

    </div>
    <div class="col-md-5 form_div">
@using (Html.BeginForm("RegisterAvailability", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 style="text-align:center;font-weight:bold;">Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.MaxBedsAvailable, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MaxBedsAvailable, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        Shelter available for: <br />
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AllowWomen, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.AllowWomen, new { @class = "form-control" })
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AllowMen, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.AllowMen, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AllowChildren, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.AllowChildren, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Next" />
        </div>
    </div>
}
        
        </div>
    <div class="col-md-4">

    </div>
    </div>

<style>
    .form_div{
        box-shadow:0px 0px 3px;
    }
</style>
