@model Shelterme.Models.SearchAndUpdateViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="">
     
 <p style="height:100px;padding-bottom:30px;padding-top:20px;font-size:20px;"> At SeekShelter, we believe nobody should be turned away from shelters at capacity with nowhere to go.</p>
    
</div>

<div class="row">

@using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @role = "form" }))
{

    <div id="search_form" class="col-md-5">
        <h2>Search shelters</h2>
        <div class="row" style="padding-top:5px; padding-left:5px">
            <div class="col-md-4">
                @Html.LabelFor(m => m.City)
            </div>
            <div class="col-md-4">
                @Html.EditorFor(m => m.City)
            </div>
        </div>
        <div class="row" style="padding-top:5px; padding-left:5px">
            <div class="col-md-4">
                @Html.LabelFor(m => m.Suburb)
            </div>
            <div class="col-md-4">
                @Html.EditorFor(m => m.Suburb)
            </div>
        </div>
        <div class="col-md-5">
            <b >Search accommodation for: </b>
        </div>
        <table  class="row">
            <tr class="col-md-4">
                <td>@Html.LabelFor(m => m.SearchMen)</td>

                <td>@Html.EditorFor(m => m.SearchMen)</td>



                <td class="col-md-2">
                    @Html.LabelFor(m => m.SearchWomen)
                </td>


                <td class="col-md-2">
                    @Html.EditorFor(m => m.SearchWomen)
            </td>



            <td class="col-md-2">
                @Html.LabelFor(m => m.SearchChildren)
            </td>

            <td>
                @Html.EditorFor(m => m.SearchChildren)
        </td>
        </tr>
        </table><br />
        
        <div class="col-md-5 row">
            <input type='Submit' value='Search' class="btn btn-default" />
        </div>
    </div>
    <div class="col-md-2">

    </div>
    
}


@using (Html.BeginForm("UpdateAvailability", "Home", FormMethod.Post, new { @role = "form" }))
{

    <div id="search_form" class="col-md-5">
        <h2>Update our availability</h2>
        <div class="row" style="padding-top:5px; padding-left:5px">
            <div class="col-md-4">
                @Html.LabelFor(m => m.CurrentBedsAvailable)
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.CurrentBedsAvailable, new { @style = "width:80px" })
            </div>
        </div>
        <div class="row col-md-4">
            Accommodation available for:
        </div>
        <table  class="row">
            <tr class="col-md-4">
                <td class="col-md-2">@Html.LabelFor(m => m.AllowMen)</td>


                <td class="col-md-2">
                    @Html.EditorFor(m => m.AllowMen)
                </td>


                <td class="col-md-2">
                    @Html.LabelFor(m => m.AllowWomen)
                </td>

                <td class="col-md-2">   @Html.EditorFor(m => m.AllowWomen)</td>


                <td class="col-md-2">@Html.LabelFor(m => m.AllowChildren)</td>

                <td class="col-md-2"> @Html.EditorFor(m => m.AllowChildren)</td>
</tr>
        </table>
        <br>

        @if (Model.ShowUpdateConfirmation)
        {
            <div class="row">
                Availability updated
            </div>
        }
        else
        {
            <div class="col-md-5 row">
                <input type='Submit' value='Update' class="btn btn-default" />
            </div>
        }
    </div>

}

        
</div>

<style>
    #search_form{
     height:300px;   
    box-shadow:-2px 0px 5px #444141;
    padding:10px;
    border-radius:10px;
    }
</style>