@model IEnumerable<Shelterme.Data.Models.ShelterProvider>

@{
    ViewBag.Title = "Available shelters";
}
<div class="rresult">
    <div class="row">
        <h2 id="header_result">The following shelters are available:</h2>
    </div>
    </div>
<div  >

    @foreach (var provider in Model)

    {
        <div class="row result">
            
                <div class="col-md-2">

                </div>
                <div class="col-md-8 result_content">
                    <ul class="result_list col-md-5">
                        <li><h3>Provider </h3></li>
                        <li> <b>Name:</b> @provider.ShelterProviderName</li>

                        <li><b>Address:</b>@provider.Address</li>

                        <li><b>Phone : </b>@provider.ContactPhone</li>

                    </ul>
                

               
                    <ul class="result_list col-md-4">
                        <li><h3>Available for </h3> </li>
                        <li>
                            <b>Men:</b>
                            @if (@provider.AllowMen)
                            {
                                <span class="glyphicon glyphicon-ok"></span>
                            }
                            else
                            {
                                <span class="glyphicon glyphicon-remove"></span>
                            }
                        </li>


                        <li>
                            <b> Women:</b>
                            @if (@provider.AllowWomen)
                            {

                                <span class="glyphicon glyphicon-ok"></span>
                            }
                            else
                            {
                                <span class="glyphicon glyphicon-remove"></span>
                            }
                        </li>

                        <li>
                            <b>Children:</b>
                            @if (@provider.AllowChildren)
                            {
                                <span class="glyphicon glyphicon-ok"></span>
                            }
                            else
                            {
                                <span class="glyphicon glyphicon-remove"></span>
                            }
                        </li>



                    </ul>
                
                
                    <ul class="result_list col-md-2">
                        <li><h3>Vacancies </h3> </li>
                        <li>  <b>Vacances : </b>@provider.CurrentBedsAvailable</li>
                    </ul>
                
            </div>
            <div class="2">

            </div>

        </div>


         
            }
             
    <div class="text-center">
        @Html.ActionLink("Search again", "Index", "Home", null, new { @class = "btn btn-default" })
    </div>
        
        </div>
    <style>
        .rresult {
            margin: 0;
            margin-top: 5%;
            width: 80%;
            margin-left: auto;
            margin-right: auto;
        }

       

        .result1 {
            float: left;
            width: 50%;
            height:100%;
            padding:5px;
            margin-left: auto;
            margin-right: auto;
        }



